{
    "name": "bext",
    "displayName": "bext",
    "description": "Brian's EXTension",
    "version": "1.0.0",
    "publisher": "bmalehorn",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/bext",
    "contributes": {
        "commands": [
            {
                "command": "bext.sayHello",
                "title": "Hello World"
            },
            {
                "command": "bext.enterNormal",
                "title": "Bext: normal mode"
            },
            {
                "command": "bext.enterInsert",
                "title": "Bext: insert mode"
            }
        ],
        "keybindings": [
            {
                "key": "Escape",
                "command": "bext.enterNormal",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
