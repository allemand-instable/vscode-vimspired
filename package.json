{
    "name": "bext",
    "displayName": "bext",
    "description": "Brian's EXTension",
    "version": "0.0.1",
    "publisher": "bmalehorn",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/bext",
    "contributes": {
        "commands": [
            {
                "command": "bext.sayHello",
                "title": "Hello World"
            },
            {
                "command": "bext.enterNormal",
                "title": "Bext: normal mode"
            },
            {
                "command": "bext.enterInsert",
                "title": "Bext: insert mode"
            }
        ],
        "keybindings": [
            {
                "key": "f",
                "command": "bext.enterInsert",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "ctrl+l",
                "command": "bext.enterNormal",
                "when": "editorTextFocus && !bext.normal"
            },
            {
                "key": "escape",
                "command": "bext.enterNormal",
                "when": "editorTextFocus && !bext.normal"
            },
            {
                "key": "k",
                "command": "cursorUp",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "j",
                "command": "cursorDown",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "r",
                "command": "bext.openLine",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "5",
                "command": "cursorTop",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "8",
                "command": "cursorBottom",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "o",
                "command": "cursorHome",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "p",
                "command": "cursorEnd",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "i",
                "command": "cursorPageUp",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "u",
                "command": "cursorPageDown",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "l",
                "command": "cursorLeft",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": ";",
                "command": "cursorRight",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "'",
                "command": "editor.action.commentLine",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "a",
                "command": "editor.action.clipboardCopyAction",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "w",
                "command": "editor.action.clipboardCutAction",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "s",
                "command": "editor.action.clipboardPasteAction",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "e",
                "command": "deleteLeft",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "/",
                "command": "undo",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "shift+/",
                "command": "redo",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "m",
                "command": "cursorWordStartLeft",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": ",",
                "command": "cursorWordEndRight",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "v",
                "command": "actions.find",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "space",
                "command": "workbench.action.quickOpen",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "d",
                "command": "deleteWordLeft",
                "when": "editorTextFocus && bext.normal"
            },
            {
                "key": "ctrl+alt+0",
                "command": "cursorHome",
                "when": "bext.never"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}